sketchybar --add item front-app center \
  --set front-app \
  script="$PLUGIN_DIR/front-app.sh" \
  label.font.style="Bold" \
  icon.padding_left=20 label.padding_right=20 \
  --subscribe front-app front_app_switched

sketchybar --update
